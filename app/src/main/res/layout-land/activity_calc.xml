<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calc_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calc_background"
    android:orientation="vertical"
    tools:context=".CalcActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calc_title"
                android:textAlignment="center"
                android:textColor="@color/calc_result_foreground"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/calc_tv_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="start"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/calc_history_foreground"
                android:textSize="24sp"

                tools:text="2 + 3 ="

                />
        </LinearLayout>

        <TextView
            android:id="@+id/calc_tv_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:padding="10sp"
            android:textColor="@color/calc_result_foreground"
            android:textSize="28sp"
            tools:text="5"

            />
    </LinearLayout>





    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <TableRow android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="MC" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="MR" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="M+" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="M-" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="MS" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="M~" />

        </TableRow>



        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="%"
                android:textColor="@color/calc_button_text_color"

                app:backgroundTint="@null"

                />
            <Button
                android:id="@+id/button_divide"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="/"

                android:textColor="@color/calc_button_text_color" />
            <Button
                android:id="@+id/button_7"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="7"


                android:textColor="@color/calc_button_text_color"

                />

            <Button
                android:id="@+id/button_8"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="8"

                android:textColor="@color/calc_button_text_color" />

            <Button
                android:id="@+id/button_9"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="9"

                android:textColor="@color/calc_button_text_color"

                />
            <ImageButton
                android:id="@+id/button_delete"
                style="@style/calc_btn_action"

                android:layout_margin="2sp"
                android:contentDescription="backspace"
                android:src="@drawable/ic_backspace"
                app:backgroundTint="@null" />



        </TableRow>

        <TableRow
            android:id="@+id/button_4"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="1/x"

                android:textColor="@color/calc_button_text_color"

                />
            <Button
                android:id="@+id/button_multiply"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="x"

                android:textColor="@color/calc_button_text_color" />
            <Button
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="4"

                android:textColor="@color/calc_button_text_color"

                />

            <Button
                android:id="@+id/button_5"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="5"

                android:textColor="@color/calc_button_text_color" />

            <Button
                android:id="@+id/button_6"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="6"

                android:textColor="@color/calc_button_text_color"

                />
            <Button
                android:id="@+id/button_clear"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="C"
                android:textColor="@color/calc_button_text_color"

                app:backgroundTint="@null"

                />


        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="x2"

                android:textColor="@color/calc_button_text_color" />
            <Button
                android:id="@+id/button_subtract"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="-"

                android:textColor="@color/calc_button_text_color" />
            <Button
                android:id="@+id/button_1"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="1"

                android:textColor="@color/calc_button_text_color"

                />

            <Button
                android:id="@+id/button_2"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="2"

                android:textColor="@color/calc_button_text_color" />

            <Button
                android:id="@+id/button_3"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="3"

                android:textColor="@color/calc_button_text_color"

                />
            <Button
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="CE"
                android:textColor="@color/calc_button_text_color"

                app:backgroundTint="@null" />



        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="2 к из x"

                android:textColor="@color/calc_button_text_color"

                />
            <Button
                android:id="@+id/button_add"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="+"

                android:textColor="@color/calc_button_text_color" />
            <Button
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="+/-"

                android:textColor="@color/calc_button_text_color"

                />

            <Button
                android:id="@+id/button_0"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text="0"

                android:textColor="@color/calc_button_text_color" />

            <Button
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:text=","

                android:textColor="@color/calc_button_text_color"

                />

            <Button
                android:id="@+id/button_equals"
                style="@style/calc_btn_action"
                android:layout_margin="2sp"
                android:backgroundTint="@color/calc_equal_background_button"
                android:text="="
                android:textColor="@color/calc_button_text_color" />
        </TableRow>

    </TableLayout>


</LinearLayout>