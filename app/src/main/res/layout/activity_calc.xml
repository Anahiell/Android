<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calc_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calc_background"
    android:orientation="vertical"
    tools:context=".CalcActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calc_title"
        android:textAlignment="center"
        android:textColor="@color/calc_result_foreground"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/calc_tv_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="end"
        android:textColor="@color/calc_history_foreground"
        android:textSize="24sp"

        tools:text="2 + 3 ="

        />

    <TextView
        android:id="@+id/calc_tv_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="end"
        android:textColor="@color/calc_result_foreground"
        android:textSize="28sp"
        tools:text="5"
        android:padding="10sp"

        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        >

        <TableRow
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="MC" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="MR" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="M+" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="M-" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="MS" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="M~" />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="%"

                />

            <Button
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="CE" />

            <Button
                android:id="@+id/button_clear"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="C"

                />

            <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2sp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_backspace"
                app:backgroundTint="@null"
                android:contentDescription="backspace"
            />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="1/x"

                />

            <Button
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="x2" />

            <Button
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="2 к из x"

                />

            <Button
                android:id="@+id/button_divide"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_7"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"


                android:text="7"

                />

            <Button
                android:id="@+id/button_8"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="8" />

            <Button
                android:id="@+id/button_9"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="9"

                />

            <Button
                android:id="@+id/button_multiply"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="x" />
        </TableRow>

        <TableRow
            android:id="@+id/button_4"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="4"

                />

            <Button
                android:id="@+id/button_5"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="5" />

            <Button
                android:id="@+id/button_6"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="6"

                />

            <Button
                android:id="@+id/button_subtract"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_1"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="1"

                />

            <Button
                android:id="@+id/button_2"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="2" />

            <Button
                android:id="@+id/button_3"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="3"

                />

            <Button
                android:id="@+id/button_add"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="+/-"

                />

            <Button
                android:id="@+id/button_0"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text="0" />

            <Button
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"

                android:text=","

                />

            <Button
                android:id="@+id/button_equals"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/calc_equal_background_button"
                android:textColor="@color/calc_button_text_color"
                android:layout_margin="2sp"
                android:text="="
                 />
        </TableRow>

    </TableLayout>


</LinearLayout>