<?xml version="1.0" encoding="utf-8"?>
<scale
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromXScale="1.0"
    android:fromYScale="1.0"
    android:toXScale="1.25"
    android:toYScale="1.25"
    android:duration="600"
    android:pivotX="50%"
    android:pivotY="50%"
    android:repeatCount="3"
    android:repeatMode="reverse"
    />


    <!--
    aанимация масштаба продолжения
    pivot: недвижемая точка - при некоторых анимациях(и вообще превращении)
    есть понятие не движемой точки, что остается на месте в процессе анимации

    аовторение анимации
    android:repeatCount="3" - количество дополнительных периодов анимации
    android:repeatMode="reverse" - реверс анимации, вариант рестарт ьыстрое возращение
    период анимации - это время, декларируемого в андроид:дюратион. он может быть или прямым
    или обратным в зависисмости от repeatMode
    -->
